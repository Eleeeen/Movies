<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:paddingBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/bg_image"
            android:layout_width="match_parent"
            android:layout_height="298dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="298dp"
            android:background="@drawable/image_mask"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TV_back_with_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:drawableLeft="@drawable/back_arrow"
            android:drawableTint="@color/gray"
            android:gravity="center"
            android:text="@string/back_with_arrow"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="@id/bg_image"
            app:layout_constraintTop_toTopOf="@id/bg_image" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="226dp"
            android:gravity="center"
            android:text="@string/age"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/TV_back_with_arrow"
            app:layout_constraintTop_toTopOf="@id/bg_image" />

        <TextView
            android:id="@+id/TV_avengers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/avengers_end_game"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/age"
            app:layout_constraintTop_toBottomOf="@id/age"
            app:layout_constraintWidth_percent=".6" />

        <TextView
            android:id="@+id/TV_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/genre"
            android:textColor="@color/red"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/TV_avengers"
            app:layout_constraintTop_toBottomOf="@id/TV_avengers" />

        <ImageView
            android:id="@+id/IV_star_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/star_icon"
            app:layout_constraintStart_toStartOf="@id/TV_genre"
            app:layout_constraintTop_toBottomOf="@id/TV_genre"

            />

        <ImageView
            android:id="@+id/IV_star_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3.25dp"
            android:src="@drawable/star_icon"
            app:layout_constraintLeft_toRightOf="@id/IV_star_1"
            app:layout_constraintTop_toTopOf="@id/IV_star_1" />

        <ImageView
            android:id="@+id/IV_star_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3.25dp"
            android:src="@drawable/star_icon"
            app:layout_constraintLeft_toRightOf="@id/IV_star_2"
            app:layout_constraintTop_toTopOf="@id/IV_star_2"

            />

        <ImageView
            android:id="@+id/IV_star_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3.25dp"
            android:src="@drawable/star_icon"
            app:layout_constraintLeft_toRightOf="@id/IV_star_3"
            app:layout_constraintTop_toTopOf="@id/IV_star_3"

            />

        <ImageView
            android:id="@+id/IV_star_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3.25dp"
            android:src="@drawable/star_icon"
            app:layout_constraintLeft_toRightOf="@id/IV_star_4"
            app:layout_constraintTop_toTopOf="@id/IV_star_4"

            app:tint="@color/gray" />

        <TextView
            android:id="@+id/TV_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.89dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/_125_reviews"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/IV_star_5"
            app:layout_constraintTop_toBottomOf="@id/TV_genre" />

        <TextView
            android:id="@+id/TV_story_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/storyline"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/IV_star_1"
            app:layout_constraintTop_toBottomOf="@id/TV_review" />

        <TextView
            android:id="@+id/TV_announce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:lineHeight="20dp"
            android:padding="16dp"
            android:text="@string/announce"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/TV_story_line"
            app:layout_constraintTop_toBottomOf="@id/TV_story_line" />

        <TextView
            android:id="@+id/TV_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/cast"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/TV_story_line"
            app:layout_constraintTop_toBottomOf="@id/TV_announce" />

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:adjustViewBounds="true"
            android:src="@drawable/image_1"
            app:layout_constraintEnd_toStartOf="@+id/image_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TV_cast" />

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_2"
            app:layout_constraintEnd_toStartOf="@+id/image_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/image_1"
            app:layout_constraintTop_toTopOf="@id/image_1" />

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_3"
            app:layout_constraintEnd_toStartOf="@+id/image_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/image_2"
            app:layout_constraintTop_toTopOf="@id/image_2" />

        <ImageView
            android:id="@+id/image_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/image_3"
            app:layout_constraintTop_toTopOf="@id/image_3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:adjustViewBounds="true"
            android:gravity="start"
            android:lineHeight="16dp"
            android:text="@string/robert_downey_jr"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="@id/image_1"
            app:layout_constraintTop_toBottomOf="@id/image_1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:adjustViewBounds="true"
            android:gravity="start"
            android:lineHeight="16dp"
            android:text="@string/chris_evans"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@id/image_2"
            app:layout_constraintTop_toBottomOf="@id/image_2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:adjustViewBounds="true"
            android:gravity="start"
            android:lineHeight="16dp"
            android:text="@string/mark_ruffalo"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@id/image_3"
            app:layout_constraintTop_toBottomOf="@id/image_3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="start"
            android:lineHeight="16dp"
            android:text="@string/chris_hemsworth"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/image_4"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@id/image_4"
            app:layout_constraintTop_toBottomOf="@id/image_4" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>